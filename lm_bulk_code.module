function delete_experiment($labid)
{
  $status = TRUE;
  $root_path = lab_migration_path();  
  $preference_q = db_query("DELETE FROM {lab_migration_experiment} WHERE proposal_id = %d",$labid);
  if (!$preference_q)
  {    
    drupal_set_message('Invalid book.', 'error');
    $status = FALSE;
  } 
  return $status;
}

